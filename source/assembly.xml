<assembly>
    <id>package-patcher</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>${project.run.dir}</baseDirectory>
    <!-- 需要打包的文件集 -->
    <fileSets>
        <fileSet>
            <directory>${project.run.dir}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.run.dir}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.run.dir}/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.run.dir}/data</directory>
            <outputDirectory>data</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>${project.run.dir}/lib</outputDirectory>
            <!-- 将scope为runtime的依赖包打包到lib目录下。 -->
            <scope>provided</scope>
        </dependencySet>
    </dependencySets>
</assembly>
